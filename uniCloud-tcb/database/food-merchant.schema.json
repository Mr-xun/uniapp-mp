{
	"bsonType": "object",
	"description": "美食商户表",
	"required": ["merchant_name", "merchant_type"],
	"permission": {
		"read": false,
		"create": false,
		"update": false,
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"merchant_name": {
			"bsonType": "string",
			"title": "商户名称",
			"label": "商户名称",
			"errorMessage": "{label}不能为空",
			"trim": "both"
		},
		"merchant_intro": {
			"bsonType": "string",
			"title": "商户介绍",
			"label": "商户介绍"
		},
		"merchant_type": {
			"bsonType": "int",
			"title": "商户类型",
			"label": "商户类型",
			"required": "{label}必填",
			"errorMessage": "{label}不能为空",
			"enum": [{
					"value": 1,
					"text": "商铺"
				},
				{
					"value": 2,
					"text": "路边摊"
				}
			]
		},
		"merchant_tag": {
			"bsonType": "array",
			"title": "商户标签"
		},
		"merchant_avatar": {
			"bsonType": "string",
			"title": "商户图",
			"description": "商户缩略图地址"
		},
		"country": {
			"bsonType": "string",
			"title": "所在国家",
			"description": "所在国家"
		},
		"province": {
			"bsonType": "string",
			"title": "所在国家",
			"description": "所在国家"
		},
		"city": {
			"bsonType": "string",
			"title": "所在国家",
			"description": "所在国家"
		},
		"district": {
			"bsonType": "string",
			"title": "所在市区",
			"description": "所在市区"
		},
		"address": {
			"bsonType": "string",
			"title":"详细地址",
			"description": "详细地址"
		},
		"goe_location":{
			"bsonType":"object",
			"title":"位置定位",
			"description": "地址位置"
		},
		"like_count": {
			"bsonType": "int",
			"title": "喜欢人数",
			"description": "喜欢数、点赞数"
		},
		"collect_count": {
			"bsonType": "int",
			"title": "收藏人数",
			"description": "收藏数"
		},
		"visit_count": {
			"bsonType": "int",
			"title": "访问人数",
			"description": "访问数"
		},
		"comment_count": {
			"bsonType": "int",
			"title": "评论数",
			"description": "评论数量"
		},
		"open_time_start": {
			"bsonType": "timestamp",
			"title": "开放开始时间"
		},
		"open_time_end": {
			"bsonType": "timestamp",
			"title": "开放结束时间"
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"create_uid": {
			"bsonType": "string",
			"description": "创建用户"
		},
		"last_modify_time": {
			"bsonType": "timestamp",
			"description": "修改时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"last_modify_uid": {
			"bsonType": "string",
			"description": "修改用户"
		}
	}
}
