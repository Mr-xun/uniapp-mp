{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index"
		},
		{
			"path": "pages/index/layout"
		},
		{
			"path": "pages/index/background"
		},
		{
			"path": "pages/index/text"
		},
		{
			"path": "pages/index/icon"
		},
		{
			"path": "pages/list/index",
			"style": {
				"navigationBarTitleText": "List"
			}
		},
		{
			"path": "pages/user/index",
			"style": {
				"disableScroll": true
			}
		},
		{
			"path": "pages/user/info",
			"style": {
				"navigationBarTitleText": "个人信息",
				"navigationStyle": "default",
				"disableScroll": true
			}
		},
		{
			"path": "pages/user/edit",
			"style": {
				"navigationBarTitleText": "修改信息",
				"navigationStyle": "default",
				"disableScroll": true
			}
		},
		{
			"path": "pages/user/publish",
			"style": {
				"navigationBarTitleText": "我的发布",
				"navigationStyle": "default"

			}
		},
		{
			"path": "pages/test/test",
			"style": {
				"navigationBarTitleText": "测试",
				"navigationStyle": "default"
			}
		}
	],
	"tabBar": {
		"list": [{
			"pagePath": "pages/index/index",
			"text": "首页",
			"iconPath": "static/tabbar/basics.png",
			"selectedIconPath": "static/tabbar/basics_cur.png"
		}, {
			"pagePath": "pages/user/index",
			"text": "我的",
			"iconPath": "static/tabbar/about.png",
			"selectedIconPath": "static/tabbar/about_cur.png"
		}, {
			"pagePath": "pages/test/test",
			"text": "测试",
			"iconPath": "static/tabbar/about.png",
			"selectedIconPath": "static/tabbar/about_cur.png"
		}]
	},
	"globalStyle": {
		"navigationBarBackgroundColor": "#79C58A",
		"navigationBarTitleText": "ColorUi for UniApp",
		"navigationStyle": "custom",
		"navigationBarTextStyle": "white",
		"usingComponts": true
	},

	"condition": { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [{
			"name": "首页", //模式名称
			"path": "pages/user/edit", //启动页面
			"query": "" //启动参数
		}]
	}
}
